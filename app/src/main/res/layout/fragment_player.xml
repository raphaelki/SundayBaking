<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="step"
            type="com.example.rapha.sundaybaking.data.models.InstructionStep" />

        <variable
            name="isDataConnectionAvailable"
            type="Boolean" />

        <import type="android.view.View" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player_view"
            viewVisibility='@{step == null || (step.videoURL.isEmpty() &amp;&amp; step.thumbnailURL.isEmpty()) || !isDataConnectionAvailable ? false : true}'
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            viewVisibility='@{step == null || (step.videoURL.isEmpty() &amp;&amp; step.thumbnailURL.isEmpty()) || !isDataConnectionAvailable ? true : false}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/no_video_placeholder_iv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_muffin" />

            <TextView
                viewVisibility="@{isDataConnectionAvailable ? true : false}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="No video available"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                viewVisibility="@{isDataConnectionAvailable ? false : true}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="No data connection"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>
</layout>
