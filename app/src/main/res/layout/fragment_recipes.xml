<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.rapha.sundaybaking.data.DataState" />

        <variable
            name="dataState"
            type="com.example.rapha.sundaybaking.data.DataState" />

        <variable
            name="recipes"
            type="java.util.List" />
    </data>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/recipes_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recipes_rc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/rv_cards_background"
                android:contentDescription="@string/recipe_rv_cd"
                android:orientation="vertical"
                android:paddingStart="4dp"
                android:paddingTop="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="4dp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem="@layout/rv_item_recipe" />

            <TextView
                viewVisibility="@{recipes.size() == 0 ? true : false}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="No recipes available. Please swipe down to refresh."
                android:textSize="18sp" />

        </FrameLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</layout>