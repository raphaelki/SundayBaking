<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="recipe"
            type="com.example.rapha.sundaybaking.data.models.Recipe" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="@dimen/recipe_card_corner_radius"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:imageUrl="@{recipe.image}"
                app:placeholder="@{@drawable/placeholder}"
                tools:src="@drawable/placeholder" />

            <View
                android:id="@+id/text_background"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:foreground="@color/background_grey"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:text="@{recipe.name, default=Recipe_Name}"
                android:textColor="?android:textColorPrimaryInverse"
                android:textSize="@dimen/no_pic_avail_text_size"
                app:layout_constraintBottom_toBottomOf="@id/text_background"
                app:layout_constraintLeft_toLeftOf="@id/text_background"
                app:layout_constraintRight_toRightOf="@id/text_background"
                app:layout_constraintTop_toTopOf="@id/text_background" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:rotation="-25"
                android:text="@string/no_picture_available"
                android:textAllCaps="true"
                android:textColor="@color/cardview_shadow_start_color"
                android:textSize="@dimen/no_pic_avail_text_size"
                android:textStyle="bold"
                android:visibility="@{recipe.image.isEmpty() ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@id/text_background"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</layout>